@model IEnumerable<Loginapplication.Models.FileUpload>

@{
    ViewBag.Title = "Index";
}

<br />
<div class="container p-3">

    <h2 class="text-center">File Upload</h2>
    <br />
    @Html.ActionLink("Add New File","Create","Utility", new { id = 0 }, new { @class= "btn btn-primary" })
    @*<a href="#" class="btn btn-primary" onclick="AddEditTechnology(0)">Add New File</a>*@
    <br />
    <br />

    <table class="table table-striped table-bordered table-md" id="TechTable">
        <thead class="bg-info text-white font-weight-bold text-center">
            <tr>
                <td>Actions</td>
                <td>File Path</td>
                <td>File Length</td>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Tech != null)
            {

                foreach (var item in ViewBag.tech)
                {
                    <tr>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ImageId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ImageId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ImageId })
                        </td>
                        <td>
                            @item.ImagePath
                        </td>
                        <td>
                            @item.Imagelength
                        </td>

                    </tr>
                }
            }

        </tbody>
    </table>
</div>

