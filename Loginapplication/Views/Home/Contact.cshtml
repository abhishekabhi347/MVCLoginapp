

@{
    ViewBag.Title = "Contacts";
}

<br />
<h2 class="text-center">@ViewBag.Title</h2>
<br />

<br />

<div class="container">
    <div class="col-md-3 text-left">
        @Html.ActionLink("Add New Employee Details", "AddEmp")

    </div>
    <br />
    <table class="table table-striped table-hover table-md table-bordered">
        <thead>
            <tr class="text-center bg-dark text-white">
                <td>Action</td>
                <td>Employee Name</td>
                <td>Job</td>
                @*<td>Country</td>*@
                <td>Retired</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">


                        @Html.ActionLink("Edit", "EditEmp", new { id = item.EmployeeId }) |

                        @Html.ActionLink("Details", "EmpDetails", new { id = item.EmployeeId }) |

                        @Html.ActionLink("Delete", "EmpDelete", new { id = item.EmployeeId }) |

                        @Html.ActionLink("Print", "CreatePdf", new { ID = item.EmployeeId })


                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    @*<td>
                        @item.Country
                    </td>*@
                    <td>
                        @item.IsEmployeeRetired
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>
<br /><br />
