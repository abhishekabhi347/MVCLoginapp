<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>


    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

    <style>
        .navMainBar {
            padding-left: 900px;
        }

        @@media screen and (max-width:500px) {
            .navMainBar {
                padding-left: 0px;
            }
        }

        .topnav {
            background: #009688; /* fallback for old browsers */
            /*background: -webkit-linear-gradient(to right, #F37335, #FDC830);*/ /* Chrome 10-25, Safari 5.1-6 */
            /*background: linear-gradient(to right, #F37335, #FDC830);*/ /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        }

        .bottomnav {
            margin-top: 12px;
            background: #00897B; /* fallback for old browsers */
            /*background: -webkit-linear-gradient(to right, #F27121, #E94057, #8A2387);*/ /* Chrome 10-25, Safari 5.1-6 */
            /*background: linear-gradient(to right, #F27121, #E94057, #8A2387);*/ /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        }

        .apptitle {
            font-family: 'Baskerville Old Face';
            font-size: large;
        }

        .topnav .dropdown-item:hover {
            background: #009688;
        }

        .bottomnav .dropdown-item:hover {
            background: #00897B;
        }
    </style>

</head>
<body>
    @if (Session["EmpName"] != null)
    {


        <nav class="navbar navbar-expand-md fixed-top topnav navbar-dark">
            <div style="margin-right:30px">
                <img src="~/Assets/ISSIlogo.png" alt="logo" class="img-responsive" height="50" width="70" />
            </div>
            <div>
                <!-- Brand -->
                @Html.ActionLink("Sample MVC application", "About", "Home", new { area = "" }, new { @class = "navbar-brand apptitle" })
            </div>
            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>



            <!-- Navbar links -->
            <div class="collapse navbar-collapse text-white navMainBar" id="collapsibleNavbar">

                <ul class="navbar-nav">


                    <!-- Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle mdl-js-ripple-effect mdl-button mdl-js-button" href="#" id="navbardrop" data-toggle="dropdown">
                            <i class="fa fa-user"></i> @Session["EmpName"]
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item mdl-js-ripple-effect mdl-button mdl-js-button" href="#"><b>Role:</b> Admin</a>
                            <a class="dropdown-item mdl-js-ripple-effect mdl-button mdl-js-button" href="/Home/LogOut"><i class="fa fa-suitcase"></i> <b>LogOut</b></a>
                        </div>
                    </li>
                </ul>


            </div>
        </nav>
        <nav class="navbar navbar-expand-md  bottomnav navbar-dark">


            <!-- Toggler/collapsibe Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar1">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar1">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home",null, new { @class = "nav-link mdl-js-ripple-effect mdl-button mdl-js-button" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link mdl-js-ripple-effect mdl-button mdl-js-button" })</li>
                    <li class="nav-item">@Html.ActionLink("Technologies", "Index", "Technology", null, new { @class = "nav-link mdl-js-ripple-effect mdl-button mdl-js-button" })</li>
                    <li class="nav-item">@Html.ActionLink("Test2", "Contact", "Home", null, new { @class = "nav-link mdl-js-ripple-effect mdl-button mdl-js-button" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop1" data-toggle="dropdown">
                            Test3
                        </a>
                        <div class="dropdown-menu">
                            @Html.ActionLink("Test2", "Contact", "Home", new { @class = "dropdown-item mdl-js-ripple-effect mdl-button mdl-js-button" })
                            @Html.ActionLink("Test2", "Contact", "Home", new { @class = "dropdown-item mdl-js-ripple-effect mdl-button mdl-js-button" })
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)


       
    }



</body>
</html>
